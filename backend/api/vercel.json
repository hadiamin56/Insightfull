{
    "version": 2,
    "builds": [
      {
        "src": "backend/api/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "build/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "src/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/api/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/build/$1"
      },
      {
        "src": "/src/(.*)",
        "dest": "/src/$1"
      },
      {
        "src": "/public/(.*)",
        "dest": "/public/$1"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }
  