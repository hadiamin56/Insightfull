{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"  
    },
    {
      "src": "backend/api/**/*.js",
      "use": "@vercel/node"  
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/api/$1" },  
    { "src": "/(.*)", "dest": "/build/$1" }             
  ]
}
